<%= form_for(@arena) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :width %>
    <%= f.text_field :width, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :length %>
    <%= f.text_field :length, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.text_field :kind, class: "form-control" %>
  </div>
  <br />

  <div class="actions">
    <%= link_to 'Voltar', place_arenas_path(@place), class: "btn btn-primary" %>
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
