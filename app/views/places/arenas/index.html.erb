<h2>Arenas em <%= @place.name %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Dimensões</th>
      <th>Tipo</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @arenas.each do |arena| %>
      <td><%= arena.name %></td>
      <td><%= "#{ arena.width }x#{ arena.length }" %></td>
      <td><%= arena.kind %></td>
      <td><%= link_to "Alterar", edit_place_arena_path(@place, arena), class: "btn-sm btn-warning" %> <%= link_to 'Remover', place_arena_path(@place, arena), method: :delete, data: { confirm: 'Tem certeza que deseja remover?' }, class: "btn-sm btn-danger" %></td>
    <% end %>
  </tbody>
</table>

<%= link_to "Voltar", places_path, class: "btn btn-primary" %>
<%= link_to "+ Nova Arena", new_place_arena_path, class: "btn btn-success" %>
